---
import HeaderLink from "./HeaderLink.astro";
import DarkModeToggle from "./DarkModeToggle.astro";
import uologo from "../images/uniq.svg"
---

<header>
  <a
    class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]"
    href="#main"
  >
    Skip to content
  </a>
  <nav>
    <section class="text-text-bold">
      <ul class="unset flex gap-4 [&>li]:p-0">
        <li><img src={uologo} alt="Girl in a jacket" width="150"></li>
        <li><HeaderLink href="/">Home</HeaderLink></li>
        <li><HeaderLink href="/blog">Blog</HeaderLink></li>
        <li><HeaderLink href="/projects">Projects</HeaderLink></li>
      </ul>
    </section>
  </nav>
  <div
    class="max-[375px]:hidden justify-self-end py-2 flex items-center content-center text-text-bold"
  >
    <a
      class="unset text-xl ml-4 hover:text-text-link"
      href="https://github.com/prthings/UniqOne"
    >
      <i
        class="fa-brands fa-github"
        aria-hidden="true"
        title="UniqOne on GitHub"></i>
      <span class="fa-sr-only">UniqOne on GitHub</span>
    </a>
    <a
      class="unset text-xl ml-4 hover:text-text-link"
      href="https://twitter.com/prthings"
    >
      <i
        class="fa-brands fa-twitter"
        aria-hidden="true"
        title="Pr Things on Twitter"></i>
      <span class="fa-sr-only">PR Things on Twitter</span>
    </a>
  </div>
  <DarkModeToggle />
</header>
<style>
  header {
    grid-area: header;
    display: grid;
    align-items: center;
    grid-template-columns: minmax(0, 1fr) minmax(0, max-content) minmax(
        0,
        max-content
      );
    position: sticky;
    top: 0;
    backdrop-filter: blur(14px);
    background-color: rgba(0, 0, 0, 0);
    height: 100%;
    width: 100%;
    opacity: 1;
  }
</style>
